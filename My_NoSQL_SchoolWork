use petshop
  //creating a database name petshop//
  
db.createCollection("mammals")
  //creating a collection named mammals//

db.dropDatabase()
  //Deleting the database

show dbs
  //showing all existing database

use petshop
  //Recreate database petshop

show collection
  //showing all existing collections

db.mammals.insert({name: "Polar Bear"})
  //adding Polar Bear on the collection nanmed mamals

db.mammals.insert({name: "Star Nosed Mole"})
  //adding Star Nosed Mole on the collection nanmed mamals

